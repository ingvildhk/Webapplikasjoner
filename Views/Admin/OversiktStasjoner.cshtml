@model List<Model.stasjon>

<!DOCTYPE html>
<html>
<head>

</head>
<body>
    <div>
        <a href="@Url.Action("LoggUt", "LoggInn")">Logg ut</a>
    </div>
    <br />
    <div class="form-horizontal">
        <h5>
            <img alt="PlussIkon" src="~/Static/plussTegn.png" width="13" height="13">
            @Html.ActionLink("Legg til ny stasjon", "LeggTilStasjon", new { tom = "" }, htmlAttributes: new { @id = "lenker" })
        </h5>
    </div>
    <br />
    <div>
        @Html.ActionLink("Se alle stasjoner", "OversiktStasjoner", new { tom = "" }, new { @class = "btn btn-success", @id = "knapp" })
        @Html.ActionLink("Se alle baner", "OversiktBaner", new { tom = "" }, new { @class = "btn btn-success", @id = "knapp" })
    </div>
    <br />


    <h4>Stasjoner</h4>

    <table class="table">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Stasjonsnavn
                </td>
                <td>
                    @Html.ActionLink("Administrer avganger til stasjon", "AvgangerPaStasjon", new { id = item.StasjonID }, new { @class = "btn btn-secondary" })
                    @Html.ActionLink("Endre navn", "EndreStasjon", new { id = item.StasjonID }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Slett stasjon", "SlettStasjon", new { id = item.StasjonID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</body>
</html>



