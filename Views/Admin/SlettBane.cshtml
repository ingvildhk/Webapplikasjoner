@model Model.bane

    <h3 class = "text-danger">@ViewBag.save</h3>

<h3>Er du sikker på at du ønsker å slette banen?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <h5>@Html.DisplayNameFor(model => model.Banenavn)</h5>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Banenavn)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions" id="slettKnapp">
            <input type="submit" value="Slett bane" class="btn btn-danger" />
        </div>
        <br />
        <div>
            @Html.ActionLink("Tilbake til oversikt", "OversiktBaner")
        </div>
    }
</div>
