<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript">
        $(function () {

            // hentAlleStasjoner og bygg opp dropdown når siden lastes

            $.ajax({
                url: '/Home/hentAlleStasjonsnavn',
                type: 'GET',
                dataType: 'json',
                success: function (stasjon) {
                    VisDropDown(stasjon);
                },
                error: function (x, y, z) {
                    alert(x + '\n' + y + '\n' + z);
                }
            });

            function VisDropDown(stasjon) {
                var utStreng = "";
                for (var i in stasjon) {
                    utStreng += "<option value='" + stasjon[i].stasjonsID + "'>" + stasjon[i].Stasjonsnavn + "</option>";
                }
                $("#drop1").append(utStreng);
                $("#drop2").append(utStreng);
            }
        })
    </script>
    <style>
        .dd {
            position: relative;
            display: inline-block;
            -webkit-appearance: none;
            
        }
        #fraDest {
            float:left;
            margin:30px;
        }

        #tilDest {
            float:right;
            margin:30px;
        }

        #drop1, #drop2 {
            font-size:large;
            padding: 5px;
        }

        #vy {
            margin: 100px;
        }

    </style>
    </head>

<body>
        <div id="fraDest">

            <select id="drop1" class="dd" style="border:outset;left:0;">

                <option value="" selected disabled hidden>Velg avreisestasjon her</option>

            </select>

        </div>

        <div id="tilDest">

            <select id="drop2" class="dd" style="border:outset">

                <option value="" selected disabled hidden>Velg ankomststasjon her</option>

            </select>

        </div>
        <div id="vy">
        </div>
</body>

</html>